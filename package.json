{
	"name": "nooa-the-pragmatic",
	"version": "1.6.1",
	"module": "index.ts",
	"type": "module",
	"private": true,
	"devDependencies": {
		"@biomejs/biome": "^2.3.13",
		"@types/bun": "^1.3.7",
		"@types/js-yaml": "^4.0.9",
		"@types/marked": "^6.0.0",
		"@types/shell-quote": "^1.7.5",
		"execa": "^9.6.1"
	},
	"peerDependencies": {
		"typescript": "^5.9.3"
	},
	"bin": {
		"nooa": "index.ts"
	},
	"scripts": {
		"start": "bun run index.ts",
		"tui:read": "bun run src/tui/read/app.tsx",
		"test": "bun test",
		"test:coverage": "bun test --coverage",
		"check": "biome check .",
		"linter": "biome lint .",
		"lint:fix": "biome check --write --unsafe src && biome format --write src",
		"format": "biome format src",
		"format:fix": "biome format src --write",
		"auto-lint-fix": "bun run lint:fix",
		"docs": "bun run scripts/generate-docs.ts"
	},
	"dependencies": {
		"js-yaml": "^4.1.1",
		"marked": "^17.0.1",
		"minimatch": "^10.1.1",
		"picomatch": "^4.0.3",
		"shell-quote": "^1.8.3",
		"yaml": "^2.8.2",
		"zod": "^4.3.6"
	}
}
