{
	"name": "nooa-the-pragmatic",
	"version": "1.6.1",
	"module": "index.ts",
	"type": "module",
	"private": true,
	"devDependencies": {
		"@biomejs/biome": "^2.3.13",
		"@types/bun": "^1.3.7",
		"@types/js-yaml": "^4.0.9",
		"@types/marked": "^6.0.0",
		"@types/react": "^19.2.10",
		"@types/react-dom": "^19.2.3",
		"@types/shell-quote": "^1.7.5",
		"execa": "^9.6.1"
	},
	"peerDependencies": {
		"typescript": "^5.9.3"
	},
	"bin": {
		"nooa": "index.ts"
	},
	"scripts": {
		"start": "bun run index.ts",
		"tui:read": "bun run src/tui/screens/read/app.tsx",
		"test": "bun test",
		"test:coverage": "bun test --coverage",
		"check": "biome check .",
		"check:changed": "biome check --changed --since=main .",
		"check:staged": "biome check --staged --no-errors-on-unmatched .",
		"linter": "biome lint .",
		"lint:fix": "biome check --write --unsafe .",
		"lint:fix:changed": "biome check --write --unsafe --changed --since=main .",
		"lint:fix:staged": "biome check --write --unsafe --staged --no-errors-on-unmatched .",
		"format": "biome format src",
		"format:fix": "biome format src --write",
		"format:changed": "biome format --changed --since=main .",
		"format:fix:changed": "biome format --write --changed --since=main .",
		"auto-lint-fix": "bun run lint:fix",
		"docs": "bun run scripts/generate-docs.ts",
		"tui:proto": "bun run src/tui/prototype/app.tsx",
		"tui:proto2": "bun run src/tui/prototype-2/app.tsx",
		"tui:test": "bun run src/tui/test-suite/app.tsx",
		"tui:tail": "bun run src/tui/tail.tsx"
	},
	"dependencies": {
		"ink": "^6.6.0",
		"ink-gradient": "^4.0.0",
		"ink-text-input": "^6.0.0",
		"js-yaml": "^4.1.1",
		"marked": "^17.0.1",
		"minimatch": "^10.1.1",
		"picomatch": "^4.0.3",
		"react": "^19.2.4",
		"react-dom": "^19.2.4",
		"shell-quote": "^1.8.3",
		"yaml": "^2.8.2",
		"zod": "^4.3.6"
	}
}
