{
    "$schema": "https://biomejs.dev/schemas/2.3.13/schema.json",
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true,
        "defaultBranch": "main"
    },
    "files": {
        "ignoreUnknown": false
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "tab"
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "suspicious": {
                "noExplicitAny": "warn"
            }
        }
    },
    "overrides": [
        {
            "includes": [
                "src/**/*.ts",
                "src/**/*.tsx"
            ],
            "linter": {
                "rules": {
                    "suspicious": {
                        "noExplicitAny": "error"
                    }
                }
            }
        },
        {
            "includes": [
                "tests/**/*.ts",
                "tests/**/*.tsx"
            ],
            "linter": {
                "rules": {
                    "suspicious": {
                        "noExplicitAny": "error"
                    }
                }
            }
        }
    ],
    "javascript": {
        "formatter": {
            "quoteStyle": "double"
        }
    },
    "assist": {
        "enabled": true,
        "actions": {
            "source": {
                "organizeImports": "on"
            }
        }
    }
}